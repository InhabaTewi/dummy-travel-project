<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eab027">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:id="@+id/imageView5"
            android:src="@drawable/ic"
            android:layout_marginBottom="269dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-50dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/editText2"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:linksClickable="false"
            android:background="#ffffff"
            android:hint="enter your username" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/editTextPassword1"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:linksClickable="false"
            android:background="#ffffff"
            android:hint="enter your password" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/editTextPassword2"
            android:linksClickable="false"
            android:background="#ffffff"
            android:layout_below="@+id/editTextPassword1"
            android:layout_alignLeft="@+id/editTextPassword1"
            android:layout_alignStart="@+id/editTextPassword1"
            android:layout_marginTop="21dp"
            android:hint="enter password again" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:id="@+id/editTextEmail"
            android:linksClickable="false"
            android:background="#ffffff"
            android:layout_below="@+id/editTextPassword2"
            android:layout_alignLeft="@+id/editTextPassword2"
            android:layout_alignStart="@+id/editTextPassword2"
            android:layout_marginTop="17dp"
            android:hint="enter your email address" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40sp"
            android:text="Submit"
            android:id="@+id/button4"
            android:layout_below="@+id/editTextEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>